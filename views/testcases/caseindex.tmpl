{{define "title"}}Test Case{{ end }}
{{define "more_style"}}
<link href="/public/libs/pnotify/dist/pnotify.css" media="all" rel="stylesheet" type="text/css" />
{{end}}
{{define "content"}}
<div class="content-wrapper">
  <!-- Content header -->
  <section class="content-header">
    <h1>
      Test Case
      <small>Detail information for testcase</small>
    </h1>
    <ol class="breadcrumb">
      <li><a href="/project/{{.ProjectName}}/dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
      <li><a href="/project/{{.ProjectName}}/design"> Design</a></li>
      <li class="active">Here</li>
    </ol>
  </section>
  <!-- Main content -->
  <section class="content">
    <div class="row">
      <div class="col-md-12">
      {{ if .TestCase}}
        <div class="box box-primary">
          <div class="box-header with-border">
            <h3 class="box-title">{{.TestCase.Prefix}}-{{.TestCase.Seq}}&nbsp;&nbsp;{{.TestCase.Title}}</h3>
          </div><!-- .box-header -->

          <div class="box-body">
            <div class="row">
              <div class="col-md-2">
                <strong>Version :</strong>
              </div>
              <div class="col-md-3">
                1
              </div>
              <div class="col-md-2">
                <strong>Last Updated : </strong>
              </div>
              <div class="col-md-3">
                {{.TestCase.UpdatedAt.Format "2006-01-02" }}
              </div>
            </div> <!-- .row -->
            <div class="row">
              <div class="col-md-2">
                <strong>Status :</strong>
              </div>
              <div class="col-md-3">
                {{if eq .TestCase.Status 1}}
                {{msg "testcase.status.active"}}
                {{else if eq .TestCase.Status 2}}
                {{msg "testcase.status.inactive"}}
                {{else}}
                {{msg "testcase.status.close"}}
                {{end}}
              </div>
              <div class="col-md-2">
                <strong>Reported :</strong>
              </div>
              <div class="col-md-3">
                {{.TestCase.CreatedAt.Format "2006-01-02" }}
              </div>
            </div><!-- .row -->
            <div class="row">
              <div class="col-md-2">
                <strong>{{msg "testcase.priority"}} :</strong>
              </div>
              <div class="col-md-3">
                {{.TestCase.PriorityStr}}
              </div>
              <div class="col-md-2">
                <strong>Execution Type :</strong>
              </div>
              <div class="col-md-3">
                {{if eq .TestCase.ExecutionType 0 }}
                Manual
                {{else}}
                Automation
                {{end}}
              </div>
            </div> <!--/.row -->
            <div class="row">
              <div class="col-md-2">
                <strong>Estimated Time(Min.) :</strong>
              </div>
              <div class="col-md-3">
                {{.TestCase.Estimated}}
              </div>
              <div class="col-md-2">
                <strong>{{msg "testcase.category"}}</strong>
              </div>
              <div class="col-md-3">
                {{.TestCase.Category.Name}}
              </div>
            </div> <!--.row -->
            <div class="row">
              <div class="col-md-5">
                <h4><strong>{{msg "description"}}</strong></h4>
              </div>
            </div> <!--.row -->
            <div class="row">
              <div class="col-md-10">
                {{nl2br .TestCase.Description}}
              </div>
            </div><!-- .row -->
            <div class="row">
              <div class="col-md-5">
                <h4><strong>{{msg "testcase.precondition"}}</strong></h4>
              </div>
            </div> <!--.row -->
            <div class="row">
              <div class="col-md-10">
                {{nl2br .TestCase.Precondition}}
              </div>
            </div><!-- .row -->
            <div class="row">
              <div class="col-md-5">
                <h4><strong>Steps</strong></h4>
              </div>
            </div> <!--.row -->
            <div class="row">
              <div class="col-md-10">
                {{nl2br .TestCase.Steps}}
              </div>
            </div> <!--.row -->
            <div class="row">
              <div class="col-md-5">
                <h4><strong>{{msg "testcase.expected"}}</strong></h4>
              </div>
            </div> <!--.row -->
            <div class="row">
              <div class="col-md-10">
                {{nl2br .TestCase.Expected}}
              </div>
            </div> <!--.row -->
          </div><!--.box-body -->
        </div> <!-- .box box-primary -->
        {{else}}
          <p> no data! </p>
        {{end}}

        
        <div class="box box-primary">
          <div class="box-header with-border">
            <h3 class="box-title">Related TestCase</h3>
          </div>
          <div class="box-body">
            <div class="table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>#</th><th>Title</th><th>Status</th><th>Priority</th>
                    <th>Category</th><th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  {{range .RelatedReqs}}
                  <tr id="tr-{{.ID}}">
                    <td>{{.ID}}</td><td>{{.Title}}</td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>
                      <a href="javascript:unlink({{.ID}}, {{$.TestCase.ID}});" class="fa fa-unlink"></a>
                    </td>
                  </tr>
                  {{end}}
                </tbody>
              </table>
            </div> <!-- .table-responsive -->
          </div> <!-- .box-body -->
        </div>
        
        <div class="box box-primary">
          <div class="box-header with-border">
            <h3 class="box-title">History</h3>
          </div>
          <div class="box-body">
            <div>
              <ul class="timeline timeline-inverse">
                {{range .Histories}}
                <li>
                  <i class="fa fa-envelope bg-blue"></i>

                  <div class="timeline-item">
                    <span class="time"><i class="fa fa-clock-o"></i> {{.CreatedAt.Format "Jan 02, 2006 15:04:05"}}</span>

                    <h3 class="timeline-header">
                      Updated by <a href="/user/profile/{{.User.ID}}">{{.User.Name}}</a>
                    </h3>

                    <div class="timeline-body">
                      {{range $index, $element := .Changes}}
                        <i class="fa fa-check right7"></i><b>{{$element.Msg}}</b><br />
                      {{end}}
                    </div>
                    {{if .Note}}
                    <div class="timeline-footer">
                      {{.Note}}
                    </div>
                    {{end}}
                  </div>
                </li>
                {{end}}
              </ul>
            </div>
          </div><!-- .box-body-->
        </div> <!-- .box -->
          {{if .TestCase}}
        <div class="row">
          <div class="col-md-6">
            <a href="/project/{{.ProjectName}}/case/edit/{{.TestCase.ID}}"><button class="btn btn-sm btn-flat btn-primary">Edit</button></a>
          </div>
        </div><!-- .row -->
        {{end}}
        
      </div> <!-- .col-md -->
    </div> <!-- .row -->
  </section><!-- /.content -->
</div><!-- /.content-wrapper -->
{{end}}
{{define "more_scripts"}}
<script type="text/javascript" src="/public/libs/pnotify/dist/pnotify.js"></script>
<script>
  function unlink(req_id, testcase_id){
    PNotify.prototype.options.styling = "bootstrap3";
    PNotify.prototype.options.delay = 1500;
    // Post  
    $.post( "/project/{{.ProjectName}}/case/unlink", {"req_id" : req_id, "tc_id" : testcase_id}, 
      function(data) {
        $("#tr-" + req_id).fadeOut(300, function(){ $(this).remove();});
        var obj = jQuery.parseJSON(data);
        new PNotify({
            title: 'Success',
            text: obj.msg,
            type: 'success'
        });
    })
    .fail(function(data) {
      var obj = jQuery.parseJSON(data)
        new PNotify({
            title: 'Fail!',
            text: obj.msg,
            type: 'error'
        });
    });
  } 
</script>
{{end}}
